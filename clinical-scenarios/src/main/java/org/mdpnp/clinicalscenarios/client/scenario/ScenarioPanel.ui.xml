<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
			font-size:16pt;
		}
		.clickable:hover {
			cursor:hand;
		}
		.rightAligned {
			float:right;
			right: 0px;
		}

		.verywide {
			width:98%;
		}
		.givemespace {
			margin:10px;
		}
		.fineprint {
			font-size: 6pt;
		}
		.withborder {
			border: 1px solid black;
		}
		.remind{
			font-weight: bold;
			font-size:16pt;
		}

	</ui:style>
	<g:DockPanel>
	
	<g:Dock direction="NORTH" size="100px">		
	<g:FlowPanel>
	    <g:HTML><br/><span style="font-size:16pt; margin-top: 20px;">Scenario Title</span></g:HTML>
	    <g:TextBox ui:field='titleEditor' styleName='scenarioTitle' visibleLength='50' maxLength='100'/>
	    <g:Label ui:field='uniqueId' styleName='important'/>
	    <g:Label ui:field='status'/>
	    <!-- <g:Label text='Remember to SAVE your changes' styleName='important'/> TICKET-125 -->
	</g:FlowPanel>
	</g:Dock>
	
	<g:Dock direction="CENTER" size="100%">
	<g:TabPanel ui:field="tabPanel">
	<g:Tab text="Scenario Description">
		<g:FlowPanel>
		<g:HTML><span style="font-size:12pt;">Guidelines</span>
		<ul>
	     	<li>Do not include protected health information</li>
	     	<li>Omit actual names of individuals or institutions</li>
	     	<li>No fields are mandatory. Complete the information in the tabs that is relevant for the case</li>
	     	<li>Keep information relevant and avoid redundant scenarios</li>
	    </ul>
	     <br/>
	     
	     </g:HTML>
		  <g:FlowPanel>
		    <g:InlineLabel text="Current State:"/><g:Anchor ui:field='currentStateExample' styleName='{style.rightAligned}' href='#' text='Example'/>
		  </g:FlowPanel>
		  
		  <g:TextArea ui:field="currentStateEditor" visibleLines="10" characterWidth="80" styleName='{style.verywide}'/>
		  <g:FlowPanel>
		    <g:InlineLabel text="Proposed State:"/><g:Anchor ui:field='proposedStateExample' styleName='{style.rightAligned}' href='#' text='Example'/></g:FlowPanel>
		    <g:TextArea ui:field="proposedStateEditor" visibleLines="10" characterWidth="80" styleName='{style.verywide}'/>
		  </g:FlowPanel>
	</g:Tab>
	
	<g:Tab text="Hazards">
	  <g:FlowPanel>
	  	 <g:HTML><span style="font-size:16pt;">Current State Hazards</span><br/> </g:HTML>
	  	<g:FlexTable ui:field='hazardsTable'></g:FlexTable>
	  	<g:Anchor text='Add New...' href='#' ui:field='addNewHazard'/>
	  </g:FlowPanel>
	</g:Tab>
	
	<g:Tab text="Environments">
	  <g:FlowPanel>	  
	  <g:HTML><span style="font-size:16pt;">Clinicians &amp; Clinical Environments</span><br/></g:HTML>
	      <g:FlowPanel>
		    <g:InlineLabel text='Clinicians Involved:'/>
		    <g:Anchor ui:field='clinicanExample' styleName='{style.rightAligned}' href='#' text='Example'/>
	     </g:FlowPanel>
	    <g:FlexTable ui:field='cliniciansTable' styleName='{style.withborder}'/>
	    <g:Anchor text='Add New...' href='#' ui:field='addNewClinician'/>
	    
	    <g:HTML>&nbsp;</g:HTML>
	    
	    <g:FlowPanel>
		    <g:InlineLabel text='Clinical Environments:'/>
		    <g:Anchor ui:field='environmentExample' styleName='{style.rightAligned}'   href='#' text='Example'/>
	    </g:FlowPanel>
	    <g:FlexTable ui:field='environmentsTable' styleName='{style.withborder}'/>
	    <g:Anchor text='Add New...' href='#' ui:field='addNewEnvironment'/>
	  </g:FlowPanel>
	</g:Tab>
	
	<g:Tab text="Equipment">
	  <g:FlowPanel>
	  	<g:HTML><span style="font-size:16pt;">Equipment Utilized</span><br/>
	     </g:HTML>
	  	<g:FlexTable ui:field='equipmentTable'></g:FlexTable>
	  	<g:Anchor text='Add New...' href='#' ui:field='addNewEquipment'/>
	  </g:FlowPanel>
	</g:Tab>
	
	
	<g:Tab text='Proposed Solution'>
	  <g:FlowPanel>
	     <g:HTML><span style="font-size:16pt;">Proposed Solution</span><br/>
	     A specific solution implementing the Proposed Solution<br/>
	     <br/>
	     
	     </g:HTML>
	     <g:FlowPanel>
	  	 <g:InlineLabel text='Clinical processes required for new system:'/><g:Anchor ui:field='clinicalProcessesExample' styleName='{style.rightAligned}' href='#' text='Example'/>
	  	 </g:FlowPanel>
	  	 <g:TextArea ui:field='clinicalProcesses' visibleLines='10' characterWidth='80' styleName='{style.verywide}'/>
	  	 <g:FlowPanel>
	  	 <g:InlineLabel text='Algorithm Description'/><g:Anchor ui:field='algorithmDescriptionExample' styleName='{style.rightAligned}' href='#' text='Example'/>
	  	 </g:FlowPanel>
	  	 <g:TextArea ui:field='algorithmDescription' visibleLines='10' characterWidth='80' styleName='{style.verywide}'/>
	  	 
	  	 <!-- <g:Label text='Improvements for the process:'/><g:TextArea visibleLines='10' characterWidth='80'/>  -->
	  </g:FlowPanel>
	</g:Tab>
	
	<g:Tab text="Benefits &amp; Risks">
	  <g:FlowPanel>
	    <g:HTML><span style="font-size:16pt;">Benefits &amp; Risks of the Proposed Solution</span><br/>
	     <br/>
	     
	     </g:HTML>
	     <g:FlowPanel>
	  	 <g:InlineLabel text='Benefits:'/><g:Anchor ui:field='benefitsExample' styleName='{style.rightAligned}' href='#' text='Example'/>
	  	 </g:FlowPanel>
	  	<g:TextArea ui:field='benefits' visibleLines='10' characterWidth='80' styleName='{style.verywide}'/>
	  	<g:FlowPanel>
	  	 <g:InlineLabel text='Risks:'/><g:Anchor ui:field='risksExample' styleName='{style.rightAligned}' href='#' text='Example'/>
	  	 </g:FlowPanel>
	  	<g:TextArea ui:field='risks' visibleLines='10' characterWidth='80' styleName='{style.verywide}'/>
	  </g:FlowPanel>
	</g:Tab>
	
	<!-- 
	<g:Tab text="Test Cases">
	  <g:FlowPanel>
	    <g:HTML><h2>Test Cases</h2></g:HTML>
	    <g:FlexTable ui:field='testCasesTable'/>
	  </g:FlowPanel>
	</g:Tab>
	-->
<!-- 	</g:TabPanel> -->
<!-- 	</g:Dock> -->

	<g:Tab text="References">
	    <g:FlowPanel>
	     <g:HTML><span style="font-size:16pt;">Add links to relevant internet references for this scenario</span><br/>
	     </g:HTML>
	  	<g:FlexTable ui:field='referencesTable'></g:FlexTable>
	  	<g:Anchor text='Add New...' href='#' ui:field='addNewLinkedReference'/>
	    </g:FlowPanel>
	</g:Tab>
	
	<g:Tab text="Tags">
	    <g:FlowPanel>
	     <g:HTML><span style="font-size:16pt;">Tag the scenario with meaningful keywords</span><br/>
	     </g:HTML>
	     <g:Label ui:field='tagsLabel'/>
<!-- 	     <g:VerticalPanel ui:field='tagsVerticalPanel'></g:VerticalPanel> -->
		<g:ScrollPanel ui:field='tagsScrollPanel'>
		    <g:FlexTable ui:field='tagsAssociatedTable'></g:FlexTable>
		</g:ScrollPanel>
		<g:Button text='Attach Tags' ui:field='saveTagsButton' styleName='{style.givemespace}' />
	  	
	    </g:FlowPanel>
	</g:Tab>
	    
	<g:Tab text="Approve or Reject">
	  <g:FlowPanel>
	    <g:HTML><h2>Approve or Reject Scenario</h2></g:HTML>
	    <g:Label text='Feedback for submitter (if any):'/>
	    <g:TextArea ui:field='feedback' visibleLines='10' characterWidth='50' styleName='{style.verywide}'/>                
	    <g:Button text='Approve Scenario' ui:field='approveScnButton' styleName='{style.givemespace}'/>
	    <g:Button text='Return Scenario' ui:field='returnScnButton' styleName='{style.givemespace}'/>
	    <g:Button text='Reject Scenario' ui:field='rejectScnButton' styleName='{style.givemespace}'/>
	  </g:FlowPanel>
	</g:Tab>
	</g:TabPanel>
	</g:Dock>
	
	<g:Dock direction="SOUTH" size="100px">
	<g:FlowPanel>
	    <g:Button text='Submit for Approval' ui:field='submitButton' styleName='{style.givemespace}'/>
	    <g:Button text='Save For Later' ui:field='saveButton' styleName='{style.givemespace}'/>
	    <g:Button text='Lock' ui:field='lockButton' styleName='{style.givemespace}'/>
<!-- 	     <g:Button text='Export to file' ui:field='exportScenario' styleName='{style.givemespace}'/> -->
		<g:Button text='Acknowledge' ui:field='ackButton' styleName='{style.givemespace}'/>
		<g:Label ui:field='ackLabel' styleName='important'/>
	</g:FlowPanel>
	</g:Dock>
	</g:DockPanel>
</ui:UiBinder> 